issn = {19961073},
journal = {Energies},
keywords = {CNN,PV,SolNet,classification,deep learning,dust,image processing,solar panel},
number = {1},
pages = {1--19},
title = {{SolNet: A Convolutional Neural Network for Detecting Dust on Solar Panels}},
volume = {16},
year = {2023}
}
